<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



    <!--通过工厂静态方法获取UserDaoImpl-->
    <bean id="factoryUserDao" class="com.zhengsongjun.factory.MyBeanFactory" factory-method="getUserDao" />
    <!--通过工厂的对象方法获取UserDaoImpl -->
    <bean id="factoryObjectUserDao" class="com.zhengsongjun.factory.MyBeanFactory2" />
    <bean id="factoryGetBean" factory-bean="factoryObjectUserDao" factory-method="getUserDao" />


    <!--配置UserServiceImpl-->
    <bean id="userService" class="com.zhengsongjun.spring.impl.UserServiceImpl">
        <constructor-arg name="name" value="jerry" />
        <property name="userDao" ref="userDao"/>
    </bean>


<!--    <bean id="userDao" class="com.zhengsongjun.spring.impl.UserDaoImpl">-->
<!--    </bean>-->

    <bean id="userDao"  class="com.zhengsongjun.spring.impl.UserDaoImpl">
        <constructor-arg name="name" value="tom">
        </constructor-arg>
    </bean>
</beans>